    <%= error_tag(@watcher, :email) %>
  </div>

  <div>
    <%= f.label :wallet_address, "What's your wallet address?" %>
    <%= f.text_field :wallet_address, placeholder: "E.g. GDNVEK4Râ€¦", spellcheck: "false", autocorrect: "off" %>
